<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root tabClosingPolicy="UNAVAILABLE" type="TabPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <tabs>
    <Tab fx:id="tabDetail" text="Details verteltas">
         <content>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <GridPane hgap="10.0" vgap="8.0">
                    <columnConstraints>
                      <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="-Infinity" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" />
                        <ColumnConstraints hgrow="SOMETIMES" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                      <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
                      <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                        <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Naam:" />
                        <Label text="Omschrijving:" GridPane.rowIndex="1" />
                        <Label text="Thema's:" GridPane.rowIndex="2" />
                        <Label text="Leeftijdcategorie:" GridPane.rowIndex="3" />
                        <TextField fx:id="name" maxWidth="-Infinity" prefWidth="200.0" GridPane.columnIndex="1" />
                        <TextField fx:id="ageCategory" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <TextArea fx:id="description" maxHeight="-Infinity" prefHeight="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="genre" maxWidth="-Infinity" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     </children>
                  </GridPane>
                  <Separator orientation="VERTICAL" prefHeight="200.0" />
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                        <Button mnemonicParsing="false" text="Afbeelding veranderen">
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="btn-lime" />
                           </styleClass>
                        </Button>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </content>
    </Tab>
      <Tab fx:id="tabItems" text="Voorwerpen in verteltas">
         <content>
            <HBox focusTraversable="true">
               <children>
                  <ListView fx:id="lstItems" focusTraversable="false" prefHeight="200.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </content>
      </Tab>
  </tabs>
</fx:root>
