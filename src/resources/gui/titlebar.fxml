                        <String fx:value="btn" />
                        <String fx:value="loan-management-tile" />
                        <String fx:value="icon-uitleningen-beheren" />
                     </styleClass>
                  </Button>
                  <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onManageUsers" prefHeight="32.0" prefWidth="32.0" text="G" GridPane.rowIndex="1">
