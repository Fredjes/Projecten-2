         <children>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLogin" style="-fx-border-width: 0px;" text="Aanmelden">
               <styleClass>
                  <String fx:value="btn" />
                  <String fx:value="btn-green" />
               </styleClass>
            </Button>
            <GridPane fx:id="navigationGrid" alignment="CENTER" hgap="3.0" HBox.hgrow="NEVER">
               <children>
                  <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onManageItems" prefHeight="32.0" prefWidth="32.0" text="V">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="item-management-tile" />
                        <String fx:value="icon-voorwerpen-beheren" />
                     </styleClass>
                  </Button>
                  <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onManageLoans" prefHeight="32.0" prefWidth="32.0" text="U" GridPane.columnIndex="1">
