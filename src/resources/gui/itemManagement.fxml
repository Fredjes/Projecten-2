<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root stylesheets="@../global.css" type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox spacing="10.0" styleClass="white" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="30.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox maxHeight="1.7976931348623157E308" spacing="10.0">
                     <children>
                        <TextField onAction="#onSearch" prefWidth="150.0" promptText="Zoeken..." />
                        <Button fx:id="btnBoek" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Boek">
                           <styleClass>
                              <String fx:value="item-btn" />
                              <String fx:value="btn" />
                           </styleClass>
                        </Button>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Spelletje">
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="item-btn" />
                           </styleClass>
                        </Button>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="CD">
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="item-btn" />
                           </styleClass>
                        </Button>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="DVD">
                           <styleClass>
                              <String fx:value="item-btn" />
                              <String fx:value="btn" />
                           </styleClass>
                        </Button>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Verteltas">
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="item-btn" />
                           </styleClass>
                        </Button>
                        <VBox alignment="BOTTOM_CENTER" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                           <children>
                              <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Opslaan">
                                 <styleClass>
                                    <String fx:value="btn" />
                                    <String fx:value="btn-lime" />
                                 </styleClass>
                              </Button>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <ScrollPane fitToWidth="true" focusTraversable="false" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                           <content>
                              <VBox alignment="CENTER" maxWidth="1.7976931348623157E308" />
                           </content>
                        </ScrollPane>
                        <HBox alignment="CENTER_LEFT" minHeight="50.0" minWidth="0.0" spacing="10.0" style="-fx-border-color: #C8C8C8; -fx-border-width: 1px;" VBox.vgrow="NEVER">
                           <padding>
                              <Insets left="5.0" />
                           </padding>
                           <children>
                              <Button focusTraversable="false" mnemonicParsing="false" prefHeight="0.0" prefWidth="30.0" text="+">
                                 <styleClass>
                                    <String fx:value="btn" />
                                    <String fx:value="btn-toolIcon" />
                                    <String fx:value="text-green" />
                                 </styleClass>
                              </Button>
                              <Button focusTraversable="false" mnemonicParsing="false" text="-">
                                 <styleClass>
                                    <String fx:value="btn" />
                                    <String fx:value="btn-toolIcon" />
                                    <String fx:value="text-red" />
                                 </styleClass>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </center>
   <top>
      <GridPane maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" styleClass="title-bar">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../logo_krekel.png" />
                     </image>
                  </ImageView>
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Voorwerpen beheren">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
               </children>
               <GridPane.margin>
                  <Insets left="10.0" />
               </GridPane.margin>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="1" />
            <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="2">
               <children>
                  <Button mnemonicParsing="false" style="-fx-border-width: 0px;" text="Aanmelden">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn-green" />
                     </styleClass>
                  </Button>
                  <GridPane alignment="CENTER" hgap="3.0" HBox.hgrow="NEVER">
                     <children>
                        <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0" text="V">
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="item-management-tile" />
                              <String fx:value="icon-voorwerpen-beheren" />
                           </styleClass>
                        </Button>
                        <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0" text="U" GridPane.columnIndex="1">
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="loan-management-tile" />
                              <String fx:value="icon-uitleningen-beheren" />
                           </styleClass>
                        </Button>
                        <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0" text="G" GridPane.rowIndex="1">
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="user-management-tile" />
                              <String fx:value="icon-gebruikers-beheren" />
                           </styleClass>
                        </Button>
                        <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0" text="I" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="import-excel-tile" />
                              <String fx:value="icon-excel-importeren" />
                           </styleClass>
                        </Button>
                     </children>
                     <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="NEVER" />
                        <ColumnConstraints halignment="CENTER" hgrow="NEVER" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                        <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <HBox.margin>
                        <Insets bottom="14.0" left="10.0" right="10.0" top="14.0" />
                     </HBox.margin>
                  </GridPane>
               </children>
               <GridPane.margin>
                  <Insets right="10.0" />
               </GridPane.margin>
            </HBox>
         </children>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
      </GridPane>
   </top>
