<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root styleClass="white" tabClosingPolicy="UNAVAILABLE" type="TabPane" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1">
   <tabs>
      <Tab closable="false" text="Details boek">
         <content>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <GridPane hgap="10.0" vgap="8.0">
                     <children>
                        <Label text="Naam:" />
                        <Label text="Omschrijving:" GridPane.rowIndex="1" />
                        <Label text="Thema's:" GridPane.rowIndex="2" />
                        <TextField fx:id="name" maxWidth="-Infinity" prefWidth="200.0" GridPane.columnIndex="1" />
                        <TextArea fx:id="description" maxHeight="-Infinity" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="themes" maxWidth="-Infinity" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     </children>
                     <columnConstraints>
                        <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="-Infinity" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="-Infinity" />
                        <ColumnConstraints hgrow="SOMETIMES" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                        <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
                        <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                     </rowConstraints>
                  </GridPane>
                  <Separator orientation="VERTICAL" prefHeight="200.0" />
                  <GridPane hgap="10.0" vgap="8.0">
                     <children>
                        <Label text="Leeftijdcategorie:" />
                        <TextField fx:id="ageCategory" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="200.0" GridPane.columnIndex="1" />
                        <Label text="Auteur:" GridPane.rowIndex="1" />
                        <TextField fx:id="author" maxWidth="-Infinity" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="publisher" maxWidth="-Infinity" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Uitgeverij:" GridPane.rowIndex="2" />
                        <Label text="Zoeken naar boek:" GridPane.rowIndex="3" />
                        <TextField fx:id="isbn" onAction="#onSearch" onInputMethodTextChanged="#onTyping" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Button fx:id="zoeken" mnemonicParsing="false" onAction="#onSearch" text="Zoeken" GridPane.columnIndex="2" GridPane.rowIndex="3">
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="btn-lime" />
                           </styleClass>
                        </Button>
                        <StackPane GridPane.columnIndex="1" GridPane.rowIndex="4">
                           <children>
                              <Pagination fx:id="bookSelector" maxPageIndicatorCount="3" onMouseClicked="#paginationOnClick" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                              <ProgressIndicator fx:id="loadingIcon" visible="false" />
                           </children>
                        </StackPane>
                     </children>
                     <columnConstraints>
                        <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="-Infinity" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="-Infinity" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="-Infinity" />
                        <ColumnConstraints hgrow="SOMETIMES" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="84.0" minHeight="10.0" prefHeight="17.0" valignment="CENTER" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <HBox.margin>
                        <Insets top="7.0" />
                     </HBox.margin>
                  </GridPane>
                  <Separator orientation="VERTICAL" prefHeight="200.0" />
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <ImageView fx:id="image" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                        <Button mnemonicParsing="false" onAction="#onSaveImage" text="Afbeelding veranderen">
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="btn-lime" />
                           </styleClass>
                        </Button>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </content>
      </Tab>
   </tabs>
</fx:root>
