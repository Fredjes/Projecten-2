<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/8.0.45" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox alignment="CENTER_LEFT" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Text fx:id="title" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="bold" text="Blad 'XXXX' koppelen" />
            <Label text="Een Excel blad koppelen wordt gedaan door hieronder voor elke kolom telkens een &quot;bestemming&quot; te kiezen. U kan kiezen om een voorbeeld te tonen van hoe de gekoppelde gegevens opgenomen worden in het systeem en kan eventuele aanpassingen maken waar nodig." wrapText="true" />
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Separator maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                  <Label fx:id="info" text="Label">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="CENTER" prefHeight="50.0" spacing="8.0" BorderPane.alignment="CENTER">
         <children>
            <Separator HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#onPrevious" text="Vorige">
               <styleClass>
                  <String fx:value="btn" />
                  <String fx:value="btn-default" />
               </styleClass>
            </Button>
            <Button fx:id="btnNext" mnemonicParsing="false" onAction="#onNext" text="Volgende">
               <styleClass>
                  <String fx:value="btn" />
                  <String fx:value="btn-lime" />
               </styleClass>
            </Button>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <TableView fx:id="content" BorderPane.alignment="CENTER" />
   </center>
</fx:root>
