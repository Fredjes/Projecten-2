<fx:root maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="650.0" prefWidth="1000.0" styleClass="white" type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <FlowPane alignment="CENTER" columnHalignment="CENTER" hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="SOMETIMES" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <VBox fx:id="gebruikersBeheren" alignment="CENTER" onMouseClicked="#onManageUsers" prefHeight="200.0" prefWidth="200.0" spacing="10.0" GridPane.rowIndex="1">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@img/user_management_icon.png" />
                           </image>
                        </ImageView>
                        <Label fx:id="lblGebruikers" text="Gebruikers beheren" textFill="WHITE">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                     <styleClass>
                        <String fx:value="user-management-tile" />
                        <String fx:value="tile" />
                     </styleClass>
                  </VBox>
                  <VBox fx:id="excelImporteren" alignment="CENTER" onMouseClicked="#onImportExcel" prefHeight="200.0" prefWidth="200.0" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@img/excel_management_icon.png" />
                           </image>
                        </ImageView>
                        <Label fx:id="lblExcel" text="Excel importeren" textFill="WHITE">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                     <styleClass>
                        <String fx:value="import-excel-tile" />
                        <String fx:value="tile" />
                     </styleClass>
                  </VBox>
                  <VBox fx:id="UitleningenBeheren" alignment="CENTER" onMouseClicked="#onManageLoans" prefHeight="200.0" prefWidth="200.0" spacing="10.0" GridPane.columnIndex="1">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@img/loan_management_icon.png" />
                           </image>
                        </ImageView>
                        <Label fx:id="lblUitleningen" text="Uitleningen beheren" textFill="WHITE">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                     <styleClass>
                        <String fx:value="loan-management-tile" />
                        <String fx:value="tile" />
                     </styleClass>
                  </VBox>
                  <VBox fx:id="voorwerpenBeheren" alignment="CENTER" onMouseClicked="#onManageItems" prefHeight="200.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <ImageView fx:id="voorwerpenBeherenIcon" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@img/item_management_icon.png" />
                           </image>
                        </ImageView>
                        <Label fx:id="lblVoorwerpen" text="Voorwerpen beheren" textFill="WHITE">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                     <styleClass>
                        <String fx:value="item-management-tile" />
                        <String fx:value="tile" />
                     </styleClass>
                  </VBox>
               </children>
            </GridPane>
         </children>
         <styleClass>
            <String fx:value="centerGlow" />
            <String fx:value="lettertuinBg" />
         </styleClass>
      </FlowPane>
   </center>
</fx:root>
