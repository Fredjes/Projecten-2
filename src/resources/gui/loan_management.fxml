<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="650.0" prefWidth="1000.0" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox spacing="10.0" styleClass="white" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="30.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox focusTraversable="true" HBox.hgrow="ALWAYS">
                     <children>
                        <VBox HBox.hgrow="ALWAYS">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #F7F7F7; -fx-border-color: #F0E6E7;">
                                 <children>
                                    <TextField fx:id="searchBar" onKeyReleased="#onSearchQuery" promptText="Zoeken..." HBox.hgrow="ALWAYS">
                                       <VBox.margin>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </VBox.margin>
                                    </TextField>
                                    <CheckBox mnemonicParsing="false" onAction="#onDisplayAllLoans" text="Teruggebrachtte uitleningen tonen?" />
                                 </children>
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </HBox>
                              <ListView fx:id="loanList" fixedCellSize="105.0" focusTraversable="false" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
               <children>
                  <Button fx:id="returnButton" mnemonicParsing="false" onAction="#onReturnLoan" prefWidth="150.0" text="Terugbrengen">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn-green" />
                     </styleClass>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onRenewLoanPeriod" prefWidth="150.0" text="Verlengen">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn-blue" />
                     </styleClass>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
      </VBox>
   </center>
</fx:root>
